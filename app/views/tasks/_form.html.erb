<div class="modal fade" id="newModal" tabindex="2" aria-labelledby="newModalLabel" aria-hidden="true" style="z-index: 1800;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newModalLabel">What do you need to do?</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <%= simple_form_for(task) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="d-flex justify-content-start">
            <div class="form-inputs">
              <%= f.input :title, placeholder: 'Enter title' %>
              <%= f.input :description, placeholder: 'Any more details?' %>
              <%= f.submit 'All Good!', class: 'btn btn-primary' %>
              <%= link_to 'Back', tasks_path %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
